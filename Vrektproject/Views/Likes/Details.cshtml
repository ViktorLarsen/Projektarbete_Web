@model Vrektproject.Models.ApplicationUser

@{
    ViewData["Title"] = "Details";

    //Display profile picture from byte[] in db.Frontend version.

    string base64 = "";
    string imgSrc = "";
    if (Model.Profile.AvatarImage != null)
    {
        base64 = Convert.ToBase64String(Model.Profile.AvatarImage);
        imgSrc = String.Format("data:image/png;base64,{0}", base64);
    }
}

<h2>Profile</h2>

<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <img id="imageTemplate" class="img-circle img-responsive col-md-8 col-md-offset-2 row" src="@imgSrc" />
        <div id="nameTemplate" class="lead text-center row col-md-12">@Html.DisplayFor(m => m.Profile.FirstName) @Html.DisplayFor(m => m.Profile.LastName)</div>
        <div id="nameTemplate" class="lead text-center row col-md-12">@Html.DisplayFor(m => m.UserName)</div>
        <div id="descriptionTemplate" class="text-center col-md-8 col-md-offset-2">@Html.DisplayFor(m => m.Profile.Description)</div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
