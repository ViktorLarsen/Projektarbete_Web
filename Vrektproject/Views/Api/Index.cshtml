@model Vrektproject.Models.ApplicationUser

@{
    ViewData["Title"] = "Finder";
}

<br />
<div hidden id="secretId">@Html.DisplayFor(model => Model.Id)</div>
<div hidden id="secretProfileId">hello</div>
<div class="container" style="border-style:solid; border-width:1px; margin-top:20px; border-color:#979797; width:50%; height:60%; border-radius:5px; background-color:white;">
    <div class="col-md-6 col-md-offset-3">
        <img id="imageTemplate" style="padding-top:10px;" class="img-circle img-responsive col-md-12 col-md-offset-0 row" src="" />
        <div id="nameTemplate" class="lead text-center row col-md-12 col-md-offset-0">Finder</div>
        <div style="padding-bottom:10px; width:100%" id="descriptionTemplate" class="text-center col-md-12 col-md-offset-0">Get new contacts and expand your network!</div>

    </div>
</div>
<div style="width:30%; padding-top:10px; padding-bottom:20px;" class="lead center-block">
<button id="tinderButton" class="btn btn-default center-block"><span> Start Matching</span></button>
<button id="likeBtn" class="btn btn-success hidden"><span>Like</span></button>
</div>